{
  "name": "Advisory Summit 2016 IoT Cloud",
  "description": "A Node-RED instance for Heroku with pre-installed Salesforce, Particle, MongoDB, and MQTT nodes.",
  "repository": "https://github.com/ozzieg/as2016-iot-node-red",
  "keywords": [
    "Node-RED",
    "Salesforce",
    "Force.com",
    "iot"
  ],
  "website": "http://nodered.org/",
  "logo": "http://nodered.org/node-red.png",
  "success_url": "/red",
  "env": {
    "NODE_RED_USERNAME": {
      "description": "Flow editor username",
      "value": "User",
      "required": false
    },
    "NODE_RED_PASSWORD": {
      "description": "Flow editor password.",
      "value": "Pass",
      "required": false
    },
    "PARTICLE_DEVICE_ID": {
      "description": "Copy Device Id (24-digit alphanumeric) from command prompt by running 'particle list'",
      "value": "123456789012345678901234",
      "required": false
    }
  },
  "addons": [ "mongolab:sandbox", "searchbox", "cloudmqtt:cat", "heroku-postgresql:hobby-dev", "herokuconnect:demo" ]
}
